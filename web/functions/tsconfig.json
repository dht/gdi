{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "baseUrl": "../../",
  "paths": {
    "@gdi/store-base": ["packages/store-base"]
  },
  "compileOnSave": true,
  "include": ["src", "_playground"],
  "exclude": ["_playground/**/*"]
}
