{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2022",
    "lib": ["dom", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/jest"],
    "baseUrl": "../",
    "paths": {
      "redux-connected": ["redux-connected"],
      "@gdi/store-iso": ["store-iso"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/**.*.spec.tsx"]
}
