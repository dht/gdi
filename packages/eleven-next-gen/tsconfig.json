{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["types-base", "@types/jest", "@types/node"],
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts", "run.ts"],
  "exclude": ["src/**.*.spec.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
